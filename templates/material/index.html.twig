{% extends 'base.html.twig' %}

{% block title %}Material{% endblock %}

{% block body %}
    <!-- =======================Matériel START -->
    <section>
        <div class="container">
            <!-- Title -->
            <div class="row-cols-1 row-cols-md-3 mb-4">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="fs-1">Liste du matériel</h2>
                    <p class="mb-0">Liste du matériel se trouvant dans les différentes salles de nos écoles</p>
                </div>
            </div>

            <!-- Tabs START -->
            <ul class="nav nav-pills nav-pills-bg-soft justify-content-sm-center mb-4 px-3" id="course-pills-tab" role="tablist">
                <!-- Tab item -->
                <li class="nav-item me-2 me-sm-5">
                    <button class="nav-link mb-2 mb-md-0 active" id="course-pills-tab-1" data-bs-toggle="pill" data-bs-target="#course-pills-tabs-1" type="button" role="tab" aria-controls="course-pills-tabs-1" aria-selected="false">Basse fidélité</button>
                </li>
                <!-- Tab item -->
                <li class="nav-item me-2 me-sm-5">
                    <button class="nav-link mb-2 mb-md-0" id="course-pills-tab-2" data-bs-toggle="pill" data-bs-target="#course-pills-tabs-2" type="button" role="tab" aria-controls="course-pills-tabs-2"	aria-selected="false">Moyenne fidélité</button>
                </li>
                <!-- Tab item -->
                <li class="nav-item me-2 me-sm-5">
                    <button class="nav-link mb-2 mb-md-0" id="course-pills-tab-3" data-bs-toggle="pill" data-bs-target="#course-pills-tabs-3" type="button" role="tab" aria-controls="course-pills-tabs-3" aria-selected="false">Haute fidélité</button>
                </li>
                <!-- Tab item -->
                <li class="nav-item me-2 me-sm-5">
                    <button class="nav-link mb-2 mb-md-0" id="course-pills-tab-4" data-bs-toggle="pill" data-bs-target="#course-pills-tabs-4" type="button" role="tab" aria-controls="course-pills-tabs-4" aria-selected="false">Petit matériels</button>
                </li>
            </ul>
            <!-- Tabs END -->

            <br>
            <!-- Tabs content START -->
            <div class="tab-content" id="course-pills-tabContent">
                {% for material in materials %}
                <!-- Content START -->
                <div class="tab-pane fade show active" id="course-pills-tabs-1" role="tabpanel" aria-labelledby="course-pills-tab-1"> <!-- Changer l'id -->
                    <div class="row g-4">

                        <!-- Card item START -->
                        <div class="col-sm-6 col-lg-4 col-xl-3">
                            <div class="card shadow h-100">
                                <!-- Image -->
                                <img src="{{ asset('uploads/images/' ~ material.image) }}" alt="{{ material.titre }}" /> <!-- Ajout de l'image twig -->
                                <!-- Card body -->

                                <div class="card-body pb-0">
                                    <!-- Badge and favorite -->
                                    <div class="d-flex justify-content-between mb-2">
                                        <a href="#" class="badge bg-purple bg-opacity-10 text-purple">{{ material.badge }}</a> <!-- Ajout du badge de l'id -->
                                    </div>
                                    <br>
                                    <!-- Title -->
                                    <h5 class="card-title fw-normal"><a href="{{ path('material_details', {'slug': material.slug}) }}">{{ material.titre }}</a></h5> <!-- Ajout du titre -->
                                    <p class="mb-2 text-truncate-2">{{ material.salle }}</p> <!-- Ajout de la salle -->
                                </div>
                                <!-- Card footer -->
                                <div class="card-footer pt-0 pb-3">
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <span class="h6 fw-light mb-0"><i class="fa fa-location-arrow text-primary me-2"></i>{{ material.localite }}</span> <!-- Ajout de la localité -->
                                        <span class="h6 fw-light mb-0"><i class="fas fa-table text-primary me-2"></i>Nombre : {{ material.nombre }}</span> <!-- Ajout le nombre -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Card item END -->
                    </div>
                </div>
                <!-- Content END -->
                {% endfor %}
            </div>
            <!-- Tabs content END -->
        </div>
    </section>
    <!-- =======================
   Matériel END -->
{% endblock %}
