{% extends 'base.html.twig' %}

{% block title %}Liste des matériaux{% endblock %}

{% block body %}
<!-- Page main content START -->
<div class="page-content-wrapper border">
    <!-- Title -->
    <div class="row mb-3">
        <div class="col-12 d-sm-flex justify-content-between align-items-center">
            <h1 class="h3 mb-2 mb-sm-0">Liste des matériaux</h1>
            <a href="{{ path('admin_materials') }}" class="btn btn-sm btn-primary mb-0">Ajouter un matériau</a>
        </div>
    </div>

    <!-- Card START -->
    <div class="card bg-transparent border">

        <!-- Card body START -->
        <div class="card-body">
            <!-- Course table START -->
            <div class="table-responsive border-0 rounded-3">
                <!-- Table START -->
                <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                    <!-- Table head -->
                    <thead>
                    <tr>
                        <th scope="col" class="border-0 rounded-start">Nom du matériel</th>
                        <th scope="col" class="border-0">salle</th>
                        <th scope="col" class="border-0">nombre</th>
                        <th scope="col" class="border-0 rounded-end">Action</th>
                    </tr>
                    </thead>
                    <!-- Table head END -->

                    <!-- Table body START -->
                    <tbody>
                    {% for material in materials %}
                    <tr>
                        <!-- Table data -->
                        <td>
                            <div class="d-flex align-items-center position-relative">
                                {% if material.image %}
                                    <!-- Image -->
                                    <div class="w-60px">
                                        <img src="data:image/png;base64,{{ material.image }}" class="rounded" alt="{{ material.titre }}">
                                    </div>
                                {% endif %}
                                <!-- Title -->
                                <h6 class="table-responsive-title mb-0 ms-2">
                                    {{ material.titre }}
                                </h6>
                            </div>
                        </td>
                       {% endfor %}
                       </tbody>
                       <!-- Table body END -->
                   </table>
                   <!-- Table END -->
               </div>
               <!-- Course table END -->
           </div>
           <!-- Card body END -->
    {% endblock %}