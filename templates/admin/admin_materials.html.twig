{% extends 'base.html.twig' %}

{% block title %}Admin - Gérer le matériel{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Gérer le matériel</h1>
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.badge, 'Badge', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.badge, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.salle, 'Salle', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.salle, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.localite, 'Localité', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.localite, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.possibilite, 'Possibilité', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.possibilite, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.liens, 'Liens', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.liens, {'attr': {'class': 'form-control'}}) }}
                </div>

            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.nombre, 'Nombre', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.idClass, 'ID Classe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.idClass, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.caracteristique, 'Caractéristique', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.caracteristique, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control', 'type': 'file'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.modeEmploi, 'PDF', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.modeEmploi, {'attr': {'class': 'form-control', 'type': 'file'}}) }}
                </div>
                
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '6'}}) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ path('admin_materials_list') }}" class="btn btn-secondary">Retour</a>


                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
